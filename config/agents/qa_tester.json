{
    "name": "QA Tester",
    "type": "qa_tester",
    "model_name": "${QA_MODEL}",
    "events": {
        "listen": ["pr_created", "design_completed", "task_completed"],
        "publish": ["test_results", "bug_report", "test_coverage_report"]
    },
    "capabilities": {
        "test_planning": {
            "strategies": ["unit", "integration", "e2e", "accessibility", "performance"],
            "priority_mapping": {
                "critical": ["security", "data_integrity", "core_functionality"],
                "high": ["user_workflows", "integration_points"],
                "medium": ["edge_cases", "error_handling"],
                "low": ["ui_polish", "minor_features"]
            }
        },
        "test_execution": {
            "frameworks": {
                "unit": ["pytest", "jest"],
                "e2e": ["playwright", "cypress"],
                "api": ["requests", "supertest"],
                "performance": ["k6", "lighthouse"]
            },
            "environments": ["local", "staging", "production"],
            "data_management": {
                "fixtures": ["mock_data", "test_users", "test_scenarios"],
                "cleanup": ["auto_reset", "isolation"]
            }
        },
        "quality_metrics": {
            "coverage": {
                "minimum": {
                    "unit": 80,
                    "integration": 70,
                    "e2e": 50
                },
                "critical_paths": 95
            },
            "performance": {
                "load_time": "< 3s",
                "ttfb": "< 200ms",
                "lighthouse_score": "> 90"
            },
            "reliability": {
                "flaky_test_threshold": 1,
                "retry_attempts": 3
            }
        },
        "reporting": {
            "formats": ["junit", "html", "json"],
            "integrations": ["github", "jira"],
            "metrics_tracking": ["coverage_trends", "test_duration", "failure_rates"],
            "bug_template": {
                "fields": [
                    "severity",
                    "steps_to_reproduce",
                    "expected_result",
                    "actual_result",
                    "environment"
                ]
            }
        }
    }
} 