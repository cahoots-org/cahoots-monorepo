# Application settings
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_SERVICE_NAME=cahoots
APP_HOST=0.0.0.0
APP_PORT=8000
APP_LOG_LEVEL=DEBUG
APP_CORS_ORIGINS=["http://localhost:3000"]

# Security settings
SECURITY_JWT_SECRET=your-jwt-secret-here
SECURITY_JWT_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Event system settings
EVENT_RETENTION_HOURS=24
EVENT_CLEANUP_INTERVAL_MINUTES=60
EVENT_MAX_RETRY_ATTEMPTS=3

# Database settings
DB_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_dev_team
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis settings
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5

# API Keys
API_STRIPE_SECRET=your-stripe-secret-key
API_STRIPE_WEBHOOK=your-stripe-webhook-secret
API_GITHUB=your-github-api-key
API_TOGETHER=your-together-api-key
API_TRELLO_KEY=your-trello-api-key
API_TRELLO_SECRET=your-trello-api-secret

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100