# Environment
ENVIRONMENT=development
DEBUG=true
SERVICE_NAME=ai-dev-team

# Service configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=DEBUG
CORS_ORIGINS=["http://localhost:3000"]

# Authentication
AUTH_SECRET_KEY=your-jwt-secret-here
AUTH_API_KEY=your-api-key-here
AUTH_TOKEN_EXPIRE_MINUTES=30

# Event system settings
EVENT_RETENTION_HOURS=24
EVENT_CLEANUP_INTERVAL_MINUTES=60
EVENT_MAX_RETRY_ATTEMPTS=3

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_dev_team
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5

# External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
GITHUB_API_KEY=your-github-api-key
TOGETHER_API_KEY=your-together-api-key
TRELLO_API_KEY=your-trello-api-key
TRELLO_API_SECRET=your-trello-api-secret
ANTHROPIC_API_KEY=your-anthropic-api-key
MISTRAL_API_KEY=your-mistral-api-key

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100

# Logging
LOG_LEVEL=DEBUG
SENTRY_DSN=

# CORS
CORS_ORIGINS=["http://localhost:3000"]